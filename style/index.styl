@import "vars.styl";

.nav
  text-align left
  padding 5% 20% 0
  &__link
    display block
    padding 5px
    text-decoration none
    color color_black_1
    font-family RobotoMedium
    font-size 20px


.title
  font-family RobotoMedium
  font-size 40px
  text-align center
  color color_black_1

.pagination
  width 80%
  margin auto
  &__items
    margin 0
    padding 0
    &-item
      font-family RobotoMedium
      font-size 14pt
      height 200px
      line-height 200px
      text-align center
      width 80%
      background-color color_grey_1
      list-style none
      margin-left auto
      margin-right auto
      margin-top 100px
      display block
  &__pages
    margin 50px 0
    width 100%
    height 50px
    padding 0
    text-align center
    &-parent
      overflow hidden
      width 150px
      height 50px
      display inline-block
      position relative
      &-block
        position: absolute
        left: 0
        top 0
        transition left .5s ease
        margin 0
        padding 0
        display inline-block
        white-space nowrap
        &-page
          list-style none
          display inline-block
          line-height 50px
          font-family RobotoMedium
          font-size 12pt
          width 50px
          vertical-align top
          height 50px
          color color_black_1
          background-color color_grey_1
          cursor pointer
          transition color .5s ease, background-color .5s ease
          &_active
            color color_white_1
            background-color color_black_1
          &:hover
            background-color color_grey_2
    &-arrow-left, &-arrow-right, &-other
      display inline-block
      line-height 50px
      font-family RobotoMedium
      font-size 12pt
      width 50px
      vertical-align top
      height 50px
    &-arrow-left, &-arrow-right
      background-color color_grey_1
      opacity .3
      transition opacity ease .5s, background-color ease .5s
      cursor pointer
      &_enable
        opacity 1
        &:hover
          background-color color_grey_2
    &-arrow-left
      background-image img_left_arrow
      background-position center
      background-repeat no-repeat
      background-size 100%
    &-arrow-right
      width 150px
      background-image img_right_arrow
      background-position center
      background-repeat no-repeat
      background-size 50%
    &-other
      position relative
      transition width .5s ease
      overflow hidden
      width 0
      &:after
        opacity 0
        transition opacity .3s ease
        content '...'
        display block
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
      &_enable
        width 50px
        &:after
          opacity 1
